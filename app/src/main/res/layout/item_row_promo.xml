<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/root_padding"
    android:layout_marginVertical="@dimen/card_hotel_margin"
    app:cardCornerRadius="@dimen/card_hotel_corner"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/card_text_large_margin">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_promo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_promo_height"
            android:layout_margin="@dimen/card_hotel_image_margin"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/Widget.TravelokaClone.ImageView.RoundedTop.Hotel"
            tools:src="@drawable/promo2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_promo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_text_medium_margin"
            android:layout_marginTop="@dimen/card_text_medium_margin"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_promo"
            tools:text="@string/title_promo_2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/card_text_medium_margin"
            android:textAppearance="@style/TextAppearance.TravelokaClone.Price"
            android:textColor="@color/text_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_promo"
            tools:text="@string/period_promo_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>